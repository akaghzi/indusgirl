<div class="ig-class">
  <%= form_for(supplier, html:{class: "form-horizontal", role: "form"}) do |f| %>
  <% if supplier.errors.any? %>
  <div class="alert alert-warning">
    <h4><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h4>

    <ul>
      <% supplier.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :name %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :contact_name %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :contact_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :phone %>
    </div>
    <div class="col-lg-4">
      <%= f.telephone_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :address1 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address1, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :address2 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address2, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-2 control-label">
      <%= f.label :city %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-4">
      <%= f.submit "Submit", class: "btn btn-medium btn-success" %>
      <%= link_to "Cancel", suppliers_path, class: "link" %>
    </div>
  </div>
  <% end %>
  
</div>